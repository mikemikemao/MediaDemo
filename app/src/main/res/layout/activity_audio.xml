<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_recordPCM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        style="@style/itemMargin"
        android:text="录音"/>

    <TextView
        android:id="@+id/tv_cancelRecordPCM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        style="@style/itemMargin"
        android:text="取消录音"/>

    <TextView
        android:id="@+id/tv_playPCM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        style="@style/itemMargin"
        android:text="播放声音"/>

    <TextView
        android:id="@+id/tv_camcelPlayPCM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        style="@style/itemMargin"
        android:text="取消播放"/>

    <TextView
        android:id="@+id/tv_audCurve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        style="@style/itemMargin"
        android:text="音量曲线"/>


</LinearLayout>